
public class solution {

	public static double findGeometricSum(int k){
		// Write your code here
        double temp = 0, num = 0;

        if (k == 0) {
            return 1;
        }
        for (int i = 1; i <= k; i++){
            num += (1) / (Math.pow(2, i));
            temp = num;
        }
        return temp + 1;

	}
}
