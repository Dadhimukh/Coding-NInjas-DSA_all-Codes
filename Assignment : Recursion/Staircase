import java.util.Scanner;
public class Solution {
	
		
    public static int staircase(int n)
    {
        if ( n == 0)
            return 1;
        else if (n < 0)
            return 0;
 
        else
            return staircase(n - 3) + staircase(n - 2)
                + staircase(n - 1);
    }
}
